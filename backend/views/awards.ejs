<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Awards</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <%- include('components/sidebar') %>
        <div class="container-fluid p-4" id="main-content">
            <h1 class="mb-4">Awards</h1>

            <div class="mb-4">
                <form action="/awards" method="POST" class="row g-3">
                    <div class="col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country" name="country" required>
                    </div>
                    <div class="col-md-4">
                        <label for="year" class="form-label">Year</label>
                        <input type="number" class="form-control" id="year" name="year" required>
                    </div>
                    <div class="col-md-4">
                        <label for="awardName" class="form-label">Award Name</label>
                        <input type="text" class="form-control" id="awardName" name="awardName" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Country</th>
                            <th>Year</th>
                            <th>Award Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% awards.forEach((award, index) => { %>
                            <tr id="award-<%= award._id %>">
                                <td><%= index + 1 %></td>
                                <td><%= award.country %></td>
                                <td><%= award.year %></td>
                                <td><%= award.awardName %></td>
                                <td>
                                    <form action="/awards/edit/<%= award._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                    </form>
                                    <form action="/awards/delete/<%= award._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/scripts.js"></script>
</body>
</html>
