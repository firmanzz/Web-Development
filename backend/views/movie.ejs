<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex main-container">
        <%- include('components/sidebar') %> <!-- Sidebar -->
        <div class="container-fluid p-4" id="main-content">
            <h1 class="mb-4">Movies</h1>
            <!-- Filter, Search, and Table Section -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="filterStatus">Filtered by : </label>
                        <select class="form-select" id="filterStatus">
                            <option selected>All</option>
                            <option value="Unapproved">Unapproved</option>
                            <option value="Approved">Approved</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="showCount">Show</label>
                        <select class="form-select" id="showCount">
                            <option selected>10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchBar" placeholder="Search by title...">
                        <button class="btn btn-outline-secondary" type="button" onclick="searchMovies()">Search</button>
                    </div>
                </div>
            </div>

            <!-- Movie Table -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Drama</th>
                            <th>Actors</th>
                            <th>Genres</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% movies.forEach((movie, index) => { %>
                            <tr id="movie-<%= movie._id %>" onclick="loadDramaDetails('<%= movie._id %>')" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#dramaModal">
                                <td><%= index + 1 %></td>
                                <td><%= movie.title %></td>
                                <td>
                                    <% movie.actors.forEach(actor => { %>
                                        <div><%= actor %></div>
                                    <% }) %>
                                </td>
                                <td>
                                    <% movie.genres.forEach(genre => { %>
                                        <span class="badge bg-secondary"><%= genre %></span>
                                    <% }) %>
                                </td>
                                <td>
                                    <div class="description-container">
                                        <p id="description-<%= movie._id %>" class="description">
                                            <%= movie.description %>
                                        </p>
                                        <button class="btn btn-link text-decoration-none read-more" onclick="toggleDescription('<%= movie._id %>')">Read more</button>
                                    </div>
                                </td>
                                <td><%= movie.status %></td>
                                <td>
                                    <a href="/movies/<%= movie._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                    <button class="btn btn-danger btn-sm" onclick="deleteMovie('<%= movie._id %>')">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal for Drama Details -->
    <div class="modal fade" id="dramaModal" tabindex="-1" aria-labelledby="dramaModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="dramaModalLabel">Drama Title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Drama details like synopsis, actors, etc. go here -->
            <h6>Other titles: <span id="otherTitles"></span></h6>
            <p>Year: <span id="dramaYear"></span></p>
            <p id="dramaSynopsis">Synopsis goes here...</p>
            <p>Genres: <span id="dramaGenres"></span></p>
            <p>Rating: <span id="dramaRating"></span></p>
            <p>Availability: <span id="dramaAvailability"></span></p>

            <!-- Actors Section -->
            <div class="row" id="dramaActors">
              <!-- Actors will be populated here dynamically -->
            </div>

            <!-- Trailer Section -->
            <div class="trailer-section mt-3">
              <button class="btn btn-primary">Watch Trailer</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-danger">Delete</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script>
    function loadDramaDetails(movieId) {
        // Simulate fetching drama details by movieId (replace this with an AJAX call or backend logic)
        const drama = {
            title: "The Shawshank Redemption",
            otherTitles: "Alternate Title 1, Alternate Title 2",
            year: "1994",
            synopsis: "In 1947, Andy Dufresne (Tim Robbins), a banker in Maine...",
            genres: ["Drama", "Crime"],
            rating: "9.3",
            availability: "Available on Netflix",
            actors: ["Tim Robbins", "Morgan Freeman", "Bob Gunton"]
        };

        // Populate modal with drama details
        document.getElementById('dramaModalLabel').innerText = drama.title;
        document.getElementById('otherTitles').innerText = drama.otherTitles;
        document.getElementById('dramaYear').innerText = drama.year;
        document.getElementById('dramaSynopsis').innerText = drama.synopsis;
        document.getElementById('dramaGenres').innerText = drama.genres.join(', ');
        document.getElementById('dramaRating').innerText = drama.rating;
        document.getElementById('dramaAvailability').innerText = drama.availability;

        // Populate actors
        const actorsContainer = document.getElementById('dramaActors');
        actorsContainer.innerHTML = ''; // Clear previous actors
        drama.actors.forEach(actor => {
            actorsContainer.innerHTML += `<div class="col-2"><p>${actor}</p></div>`;
        });
    }
    </script>
</body>
</html>
