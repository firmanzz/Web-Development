<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Include Sidebar -->
        <%- include('components/sidebar') %>

        <!-- Main Content -->
        <div class="container-fluid p-4" id="main-content">
            <h1 class="mb-4">Movies</h1>
            <a href="movies/addMovie" class="btn btn-primary mb-4">Add New Movie</a>
            <div class="row">
                <% movies.forEach(movie => { %>
                    <div class="col-md-4 mb-3" id="movie-<%= movie._id %>">
                        <div class="card h-100">
                            <img src="<%= movie.thumbnail %>" class="card-img-top" alt="<%= movie.title %> thumbnail">
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.title %></h5>
                                <p class="card-text">
                                    <strong>Genres:</strong>
                                    <% movie.genres.forEach(genre => { %>
                                        <span class="badge bg-secondary"><%= genre.name %></span>
                                    <% }) %>
                                </p>
                                <p class="card-text"><strong>Rating:</strong> <%= movie.rating %></p>
                            </div>
                            <div class="card-footer">
                                <a href="/movies/<%= movie._id %>/edit" class="btn btn-warning">Edit</a>
                                <button class="btn btn-danger" onclick="deleteMovie('<%= movie._id %>')">Delete</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/scripts.js"></script>
</body>
</html>
