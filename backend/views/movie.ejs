<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <%- include('components/sidebar') %>
        <div class="container-fluid p-4" id="main-content">
            <h1 class="mb-4">Movies</h1>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="filterStatus">Filtered by : </label>
                        <select class="form-select" id="filterStatus">
                            <option selected>All</option>
                            <option value="Unapproved">Unapproved</option>
                            <option value="Approved">Approved</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="showCount">Show</label>
                        <select class="form-select" id="showCount">
                            <option selected>10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchBar" placeholder="Search by title...">
                        <button class="btn btn-outline-secondary" type="button" onclick="searchMovies()">Search</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Drama</th>
                            <th>Actors</th>
                            <th>Genres</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% movies.forEach((movie, index) => { %>
                            <tr id="movie-<%= movie._id %>">
                                <td><%= index + 1 %></td> <!-- Nomor urut -->
                                <td><%= movie.title %></td>
                                <td>
                                    <% movie.actors.forEach(actor => { %>
                                        <div><%= actor %></div>
                                    <% }) %>
                                </td>
                                <td>
                                    <% movie.genres.forEach(genre => { %>
                                        <span class="badge bg-secondary"><%= genre %></span>
                                    <% }) %>
                                </td>
                                <td>
                                    <div class="description-container">
                                        <p id="description-<%= movie._id %>" class="description">
                                            <%= movie.description %>
                                        </p>
                                        <button class="btn btn-link text-decoration-none read-more" onclick="toggleDescription('<%= movie._id %>')">Read more</button>
                                    </div>
                                </td>
                                <td><%= movie.status %></td>
                                <td>
                                    <a href="/movies/<%= movie._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                    <button class="btn btn-danger btn-sm" onclick="deleteMovie('<%= movie._id %>')">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/scripts.js"></script>
</body>
</html>
