<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
    <%- include('components/sidebar') %>
    <div class="container mt-4">
        <form>
            <div class="row mb-3">
                <div class="col">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="col">
                    <label for="alternativeTitle" class="form-label">Alternative Title</label>
                    <input type="text" class="form-control" id="alternativeTitle" name="alternativeTitle">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label for="year" class="form-label">Year</label>
                    <input type="text" class="form-control" id="year" name="year">
                </div>
                <div class="col">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" id="country" name="country">
                </div>
            </div>

            <div class="mb-3">
                <label for="synopsis" class="form-label">Synopsis</label>
                <textarea class="form-control" id="synopsis" name="synopsis" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="availability" class="form-label">Availability</label>
                <input type="text" class="form-control" id="availability" name="availability">
            </div>

            <div class="mb-3">
                <label for="genres" class="form-label">Add Genres</label>
                <div class="genres-container">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="action" value="Action">
                        <label class="form-check-label" for="action">Action</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="action" value="Action">
                        <label class="form-check-label" for="action">Romance</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="action" value="Action">
                        <label class="form-check-label" for="action">Adventure</label>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="actors" class="form-label">Add Actors</label>
                <input type="text" class="form-control mb-2" id="searchActor" placeholder="Search Actor Names">
                <div class="autocomplete-suggestions" id="autocompleteSuggestions"></div>
                <div class="actors-container" id="actorsContainer">
                    <div class="actor-box">
                        <span>Jason Statham</span>
                        <button type="button" class="btn-close"></button>
                    </div>
                    <div class="actor-box">
                        <span>Jhonny Deep</span>
                        <button type="button" class="btn-close"></button>
                    </div>
                    <div class="actor-box">
                        <span>Gal Gadot</span>
                        <button type="button" class="btn-close"></button>
                    </div>
                    <div class="actor-box">
                        <span>Lukman Sardi</span>
                        <button type="button" class="btn-close"></button>
                    </div>
                    <div class="actor-box">
                        <span>Yayan Ruhiyan</span>
                        <button type="button" class="btn-close"></button>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label for="linkTrailer" class="form-label">Link Trailer</label>
                    <input type="text" class="form-control" id="linkTrailer" name="linkTrailer">
                </div>
                <div class="col">
                    <label for="award" class="form-label">Award</label>
                    <select class="form-select" id="award" name="award">
                        <option value="">Select Award</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>
