<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/styles.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <%- include('components/sidebar') %>
        <div class="container-fluid p-4" id="main-content">
            <h1 class="mb-4">Comments</h1>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="filterStatus">Filtered by: </label>
                        <select class="form-select" id="filterStatus">
                            <option selected>None</option>
                            <option value="Unapproved">Unapproved</option>
                            <option value="Approved">Approved</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text" for="showCount">Shows</label>
                        <select class="form-select" id="showCount">
                            <option selected>10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchBar" placeholder="Search...">
                        <button class="btn btn-outline-secondary" type="button" onclick="searchComments()">Search</button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" onclick="selectAll()" /></th>
                            <th>Username</th>
                            <th>Rate</th>
                            <th>Drama</th>
                            <th>Comments</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% comments.forEach((comment, index) => { %>
                            <tr id="comment-<%= comment._id %>">
                                <td><input type="checkbox" name="commentSelect" value="<%= comment._id %>"></td>
                                <td><%= comment.username %></td>
                                <td>
                                    <span class="rating">
                                        <% for(let i = 0; i < comment.rate; i++) { %>
                                            <i class="text-warning">&#9733;</i>
                                        <% } %>
                                        <% for(let i = comment.rate; i < 5; i++) { %>
                                            <i class="text-muted">&#9733;</i>
                                        <% } %>
                                    </span>
                                </td>
                                <td><%= comment.drama %></td>
                                <td><%= comment.text %></td>
                                <td><%= comment.status %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-start mt-3">
                <button class="btn btn-success me-2" onclick="approveComments()">Approve</button>
                <button class="btn btn-danger" onclick="deleteComments()">Delete</button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/scripts.js"></script>
</body>
</html>
